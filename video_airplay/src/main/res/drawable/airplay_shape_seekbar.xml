<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">


    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <solid android:color="#ffffff" />
            <corners android:radius="@dimen/airplay_seekBar_radius" />
            <size android:height="@dimen/airplay_seekBar_height" />
        </shape>

    </item>

    <item android:id="@android:id/progress">
        <scale android:scaleWidth="100%">
            <shape android:shape="rectangle">
                <solid android:color="#0BCD6E" />
                <corners
                    android:bottomLeftRadius="@dimen/airplay_seekBar_radius"
                    android:topLeftRadius="@dimen/airplay_seekBar_radius" />
                <size android:height="@dimen/airplay_seekBar_height" />
            </shape>
        </scale>
    </item>

</layer-list>